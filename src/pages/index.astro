---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Experience from "../components/Experience.astro";
import SocialPill from "../components/SocialPill.astro";
import Projects from "../components/Projects.astro";

import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import MailIcon from "../components/icons/Mail.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
---

<Layout title="Portfolio de Ascender - Programador Web.">
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <img
        class="rounded-full size-12 mb-4"
        src="/ASCENDER Devs.png"
        alt="Asc Photo"
      />
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, Soy Alexis <a
          href="https://www.linkedin.com/in/ascenderdev"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span class="text-purple-300/90"
          >Soy Alexis Rodriguiez un estudiante de Ingeniería en Sistemas.</span
        > De Tijuana, México. Especializado en FrontEnd.
      </h2>

      <nav class="flex gap-x-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/ascenderdev">
          <LinkedInIcon class="size-4 md:size-6" /> LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/AlexisRodriguez4207">
          <GitHubIcon class="size-4 lg:size-6" /> GitHub
        </SocialPill>
        <SocialPill href="mailto:alexis.perez4207@gmail.com">
          <MailIcon class="size-4 lg:size-6" /> alexis.perez4207@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="experience">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
