---
import NextJS from "./icons/NextJS.astro";
import CSS from "./icons/Css.astro";

const TAGS = {
  NEXT: {
    name: "Next.JS",
    class: "bg-black text-white",
    icon: NextJS,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#003159] text-white",
    icon: CSS,
  },
};

const Projects = [
  {
    title: "Guitaras LA",
    description:
      "Proyecto creado por parte de un curso de Udemy para poner en practica lo aprendido",
    link: "https://guitarras-la-nextjs.vercel.app/",
    github: "https://github.com/AlexisRodriguez4207/GuitarrasLA-Nextjs",
    image: "/projects/svgl.webp",
    tags: [TAGS.NEXT, TAGS.CSS],
  },
];
---

{
  Projects.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/20"
        src={image}
        alt={`Captura de Pantalla del Proyecto ${image}`}
      />
    </article>
  ))
}
